@{
}
@model IEnumerable<Bib_multas.Clases.Multa>

<h2>Multas registradas</h2>
<a asp-action="Crear">Registrar nueva multa</a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Conductor</th>
            <th>Vehículo</th>
            <th>Tipo</th>
            <th>Valor ($)</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Sancionado.Nombre</td>
                <td>@m.Vehiculo.Placa</td>
                <td>@m.GetType().Name</td>
                <td>@m.Valor</td>
                <td>@m.Fecha_hora.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>